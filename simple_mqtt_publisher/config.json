{
  "name": "Simple MQTT Publisher",
  "version": "1.0",
  "slug": "simple_mqtt_publisher",
  "description": "Publishes a message to an MQTT broker",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "services",
  "boot": "auto",
  "options": {
    "mqtt_broker": "core-mosquitto",  // Use the service name of the Mosquitto broker add-on
    "mqtt_port": 1883,
    "mqtt_username": "yourusername",  // Set this according to your Mosquitto configuration
    "mqtt_password": "yourpassword",  // Set this according to your Mosquitto configuration
    "mqtt_topic": "homeassistant/test",
    "message": "Hello from Home Assistant add-on"
  },
  "schema": {
    "mqtt_broker": "str",
    "mqtt_port": "int",
    "mqtt_username": "str",
    "mqtt_password": "str",
    "mqtt_topic": "str",
    "message": "str"
  },
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  }
}
